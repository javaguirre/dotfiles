// Zed settings - Migrated from VS Code
{
  // Editor - Fonts & Appearance
  "buffer_font_family": "Dank Mono",
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_size": 14,
  "ui_font_size": 14,
  "theme": "Ayu Mirage",
  "tab_size": 2,
  "soft_wrap": "none",
  "show_whitespaces": "selection",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "format_on_save": "on",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "show_edit_predictions": true,
  "preferred_line_length": 80,
  "wrap_guides": [80],

  // Terminal
  "terminal": {
    "font_family": "DankMono Nerd Font",
    "font_size": 13,
    "line_height": {
      "custom": 1.1
    },
    "blinking": "off",
    "alternate_scroll": "off",
    "option_as_meta": false,
    "button": true,
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },

  // Vim Mode
  "vim_mode": true,
  "base_keymap": "VSCode",
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },

  // Git
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    },
    "autoFetch": true
  },

  // File explorer
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true
  },

  // Search
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },

  // Language-specific settings
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "tab_size": 2
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "tab_size": 2
    },
    "TSX": {
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "tab_size": 2
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": "prettier",
      "tab_size": 2
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": "prettier",
      "soft_wrap": "editor_width"
    },
    "Python": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "HTML": {
      "format_on_save": "off",
      "tab_size": 2
    },
    "YAML": {
      "tab_size": 2,
      "format_on_save": "on"
    }
  },

  // LSP Configuration
  "lsp": {
    "eslint": {
      "settings": {
        "format": {
          "enable": true
        },
        "debug": true
      }
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoImportCompletions": true,
        "python.analysis.inlayHints.variableTypes": true,
        "python.analysis.inlayHints.functionReturnTypes": true,
        "python.analysis.inlayHints.pytestParameters": true,
        "python.analysis.autoFormatStrings": true
      }
    }
  },

  // Files
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "JSON": ["*.json", ".eslintrc", ".prettierrc"]
  },

  // UI
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "tabs": {
    "git_status": true,
    "close_position": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "folds": true
  },

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Auto-update
  "auto_update": true,

  // Collaboration
  "collaboration_panel": {
    "button": true,
    "dock": "left"
  },

  // AI Assistant
  "agent": {
    "enabled": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-20250929"
    },
  },

  // Preview tabs
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },

  // Journal
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },

  // Outline panel
  "outline_panel": {
    "dock": "right",
    "default_width": 300
  }
}
